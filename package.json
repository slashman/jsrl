{
  "name": "jsrl",
  "version": "1.0.0",
  "description": "JavaScript Roguelike Boilerplate - The basics to start building your own",
  "main": "src/main.js",
  "scripts": {
    "build:electron": "cross-env NODE_ENV=production webpack --target=electron-renderer --mode=production --config=webpack/webpack.config.js",
    "build:web": "webpack --target=web --mode=production --config=webpack/webpack.config.js",
    "electron": "concurrently \"cross-env NODE_ENV=development webpack --target=electron-renderer --mode=development --config=webpack/webpack.config.js --watch\" \"cross-env NODE_ENV=development electron .\"",
    "web": "cross-env NODE_ENV=development webpack-dev-server --target=web --mode=development --config=webpack/webpack.config.js --open",
    "package:win32": "npm run build:electron && electron-packager dist/electron JSRL --overwrite --platform=win32 --out=dist --icon=./src/favicon.ico",
    "package:linux": "npm run build:electron && electron-packager dist/electron JSRL --overwrite --platform=linux --out=dist",
    "package:mac": "npm run build:electron && electron-packager dist/electron JSRL --overwrite --platform=darwin --out=dist"
  },
  "license": "MIT",
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.5.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.2",
    "electron": "^21.2.3",
    "electron-packager": "^17.1.1",
    "electron-reload": "^1.5.0",
    "html-webpack-plugin": "^5.5.0",
    "is-electron-renderer": "^2.0.1",
    "minimist": "^1.2.7",
    "style-loader": "^3.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-target-electron-renderer": "^0.4.0"
  }
}
